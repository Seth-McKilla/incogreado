{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BookReview",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "maxLength": 500
    },
    "rating": {
      "type": "integer",
      "min": 1,
      "max": 5
    },
    "description": {
      "type": "string",
      "maxLength": 500
    }
  }
}
